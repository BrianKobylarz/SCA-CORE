# Semantic Flow Analyzer Environment Configuration

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=semantic_flow_analyzer_v0.1.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/semantic_flow_db
REDIS_URL=redis://localhost:6379/0

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_CACHE_SIZE=10000

# Analysis Configuration
DEFAULT_K_NEIGHBORS=25
FLOW_SIMILARITY_THRESHOLD=0.3
BURST_Z_THRESHOLD=3.0
CASCADE_RISK_THRESHOLD=1.0

# Visualization Configuration
PLOT_BACKEND=plotly
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Performance Configuration
N_JOBS=4
BATCH_SIZE=1000
MEMORY_LIMIT=8GB
GPU_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/sfa.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Export Configuration
EXPORT_FORMAT=parquet
EXPORT_COMPRESSION=snappy
EXPORT_DIR=exports/

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000000

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_METRICS_COLLECTION=true
ENABLE_PERFORMANCE_MONITORING=true